{
  "name": "@monei-js/node-sdk",
  "description": "Node.js SDK for MONEI Digital Payment Gateway",
  "version": "1.6.1",
  "homepage": "https://monei.com",
  "author": "MONEI <support@monei.com> (https://monei.com)",
  "type": "module",
  "license": "MIT",
  "contributors": [
    "Dmitriy Nevzorov <dn@monei.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MONEI/monei-node-sdk"
  },
  "keywords": [
    "monei",
    "payment gateway",
    "payment processing",
    "credit cards",
    "api"
  ],
  "source": "./index.ts",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "generate": "openapi-generator-cli generate --generator-key typescript-axios",
    "generate:local": "openapi-generator-cli generate --generator-key typescript-axios-local",
    "compile": "microbundle -f es,cjs --target node --strict --name index --tsconfig tsconfig.build.json",
    "dev": "microbundle watch -f es,cjs --target node --strict --name index --tsconfig tsconfig.build.json",
    "build": "yarn generate && yarn replace && yarn compile",
    "build:local": "yarn generate:local && yarn replace && yarn compile",
    "replace": "node scripts/replace.js",
    "release": "release-it",
    "prepare": "husky",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "commitlint": "commitlint --edit",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@openapitools/openapi-generator-cli": "^2.17.0",
    "@release-it/conventional-changelog": "^10.0.0",
    "@types/node": "^22.13.10",
    "@vitest/coverage-v8": "^3.0.8",
    "axios-mock-adapter": "^2.1.0",
    "husky": "^9.1.7",
    "microbundle": "^0.15.1",
    "prettier": "^3.5.3",
    "release-it": "^18.1.2",
    "replace-in-file": "^8.3.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  },
  "dependencies": {
    "axios": "^1.8.2"
  },
  "packageManager": "yarn@4.7.0"
}
